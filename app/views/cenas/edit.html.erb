<% provide(:title, 'Editarndo a cena') %>
<h1>Editarndo a cena</h1>

<div class="row">
  <div class="col">
    <%= form_for(@cena) do |c| %>
      <%= c.text_field :titulo, class: "form-control form-control-lg" %>

      <%= c.text_area:conteudo,  class:"form-control", rows:"20"  %>

      <%= c.submit "Salvar Cena", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


<%= link_to 'Voltar', cenas_path %>
